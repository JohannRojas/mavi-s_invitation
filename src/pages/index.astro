---
import ConfettiCard from '../components/react/ConfettiCard'

const thistle = 'hsla(278, 35%, 78%, 1)'
const fairyTale = 'hsla(337, 100%, 89%, 1)'
const carnationPink = 'hsla(338, 100%, 84%, 1)'
const uranianBlue = 'hsla(208, 97%, 87%, 1)'
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>‚ù§Ô∏è Cumple Mimi ‚ù§Ô∏èü•≥üéÇ</title>
  </head>
  <body>
    <ConfettiCard client:load />
  </body>
</html>
<style
  is:global
  define:vars={{
    thistle,
    fairyTale,
    carnationPink,
    uranianBlue,
  }}
>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100dvh;
    background-image: url('/background.png'),
      linear-gradient(to bottom, var(--thistle), var(--fairyTale));
    background-size: contain;
    background-position: center;
    background-repeat: no-repeat;
    overflow: hidden;
  }

  .card {
    position: relative;
    width: 300px;
    height: 400px;
    background-color: white;
    transform-style: preserve-3d;
    perspective: 1000px;
    box-shadow: 10px 20px 40px rgba(0, 0, 0, 0.25);
    transition: 1s;
    cursor: pointer;
    border-radius: 10px;
  }

  .card:hover {
    transform: translateX(50%); /* Moves card to the right on hover */
  }
  .card .img-box {
    position: relative;
    width: 100%;
    height: 100%;
    z-index: 1;
    transform-origin: left; /* Pivot from the left edge */
    transform-style: preserve-3d;
    background: #000;
    transition: 1s;
    box-shadow: 10px 20px 40px rgba(0, 0, 0, 0.25);
    border-radius: 10px;
    position: relative;
  }

  .card .img-box::after {
    content: '¬°¬°Abre la tarjeta!! üéÇü•≥‚ù§Ô∏è';
    position: absolute;
    bottom: 1rem;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex; /* Enable Flexbox */
    align-items: flex-end; /* Vertically center */
    justify-content: center; /* Horizontally center */
    color: var(--uranianBlue);
    font-size: 24px;
    font-weight: bold;
    backface-visibility: hidden;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
    pointer-events: none;
  }

  .card:hover .img-box {
    transform: rotateY(-180deg); /* Rotate along Y-axis to the left */
  }

  .card .img-box img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    backface-visibility: hidden; /* Hide backface to prevent flickering */
    border-radius: 10px;
  }

  .card .img-box img:nth-child(2) {
    transform: rotateY(180deg);
  }
  .card:hover .img-box::after {
    content: '¬°¬°Abre la tarjeta!!';
    position: absolute;
    bottom: 1rem;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex; /* Enable Flexbox */
    align-items: flex-end; /* Vertically center */
    justify-content: center; /* Horizontally center */
    color: var(--uranianBlue);
    font-size: 24px;
    font-weight: bold;
    backface-visibility: hidden;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
    pointer-events: none;
  }

  .card .details {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    padding: 20px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .card .details .content {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }

  .card .details .content h2 {
    text-align: center;
    font-weight: 700;
    line-height: 1em;
  }
  .card .details .content h2 span {
    color: var(--thistle);
    font-size: 0.8em;
    font-weight: 700;
  }
  .card .details .content .icons {
    position: relative;
    display: flex;
    margin-top: 10px;
  }

  .card .details .content .icons svg {
    display: inline-block;
    width: 35px;
    height: 35px;
    background-color: #333;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    margin: 5px;
    padding: 7px;
    font-size: 18px;
    transition: 0.2s;
    border-radius: 8px;
  }

  .card .details .content .icons svg:hover {
    background: var(--carnationPink);
  }

  @media (max-width: 768px) {
    .card .img-box {
      transform-origin: top; /* Pivot from top edge */
    }

    .card:hover .img-box {
      transform: rotateX(180deg); /* Rotate downwards */
    }

    .card:hover {
      transform: translateY(50%); /* Moves card downwards */
    }

    .card .img-box img:nth-child(2) {
      transform: rotateX(180deg);
    }
  }
</style>
